{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
<section class="container">
    <div class="row">
        <div class="col">
            <form method="post" class="border border-warning rounded mt-5 p-5">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes connecté comme : {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                    </div>
                {% endif %}

                <h1 class="display-1 text-center my-4">Se connecter</h1>
                <label for="inputUsername" class="form-label fs-3 mt-2">Email : </label>
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control fs-4" required>
                <label for="inputPassword" class="form-label fs-4 mt-4">Mot de passe :</label>
                <input type="password" name="password" id="inputPassword" class="form-control fs-3" required>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                <button class="btn btn-lg btn-success mt-4 mb-5" type="submit">
                        Se connecter
                </button>
                <a href="{{path('app_register')}}" class="btn btn-secondary mt-4 mb-5 ms-3 me-3">S'inscrire</a>
                <a href="{{path('app_main')}}" class="btn btn-warning mt-4 mb-5">Retour à l'accueil</a>

            </form>  
        </div>
    </div>
</section>

{% endblock %}
